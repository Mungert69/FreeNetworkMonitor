    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://dev.com:3000/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach Firefox in debug mode",
            "type": "firefox",
            "request": "attach"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "https://dev.com:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}